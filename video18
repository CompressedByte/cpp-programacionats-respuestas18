#include <iostream>
#include <string>
#include <cmath>
/*Librerias*/

using namespace std;

int main() {
	int cuboDeUnNumero, nParoImpar, opcion;

	cout << "1. Cubo de un numero" << endl;
	cout << "2. Numero par o impar" << endl;
	cout << "3. Salir" << endl;
	cout << "Selecciona una opcion: "; cin >> opcion;

	switch (opcion) {
		case 1:
		cout << "ingrese un numero: "; cin >> cuboDeUnNumero;

		cout << "el numero es: " << cuboDeUnNumero * cuboDeUnNumero << endl; break;

		case 2:
		cout << "ingrese un numero par o impar: "; cin >> nParoImpar;

		if (nParoImpar%2 == 0) {
			cout << "el numero es par" << endl;
		} else {
			cout << "el numero es impar" << endl; break;
		}

		case 3:
		break;
	}


	return 0;
}
