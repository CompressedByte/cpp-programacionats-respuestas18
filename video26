#include <iostream>
#include <string>
#include <cmath>
using namespace std;

int main() {
	int resultado = 0, factorial = 1, x;

	std::cout << "introduzca un numero: "; std::cin >> x;

	for (int i = 1; i < x; ++i)
	{
		factorial *= i;
		resultado += factorial;
	}

	std::cout << "el resultado es: " << resultado;
	return 0;
}
