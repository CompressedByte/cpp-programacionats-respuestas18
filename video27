#include <iostream>
#include <string>
#include <math.h>
using namespace std;

int main() {
	int resultado = 0, x, y;

	std::cout << "introduzca un numero: "; std::cin >> x;

	for (int i = 1; i <= x; ++i) {
		if (i%2 == 0) {
			resultado -= i;
		} else {
			resultado += i;
		}
	}
	std::cout << "resultado: " << resultado;
	return 0;
}
